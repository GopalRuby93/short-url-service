<div class="signup-container">
  <h2 class="text-center">User Login</h2>
  <%= form_with url: login_path, method: :post do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <%= f.submit "Login" %>
  <% end %>
</div>
